%% -*- erlang -*-
{erl_opts,[debug_info]}.
{deps_dir, ["deps"]}.
{deps, [{syslog, ".*", {git, "git://github.com/UnisonPublic/erlang-syslog.git", "master"}},
        {parse_trans, ".*", {git, "git://github.com/UnisonPublic/parse_trans.git", "master"}},
        {edown, ".*", {git, "git://github.com/UnisonPublic/edown.git", "master"}}]}.
{cover_enabled, true}.
{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.
{edoc_opts, [{doclet, edown_doclet},
             {top_level_readme, {"./README.md", "https://github.com/siberian-fast-food/alogger"}}]}.
{sub_dirs, []}.
